<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com</groupId>
  <artifactId>Amazon</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Amazon</name>
  <url>http://maven.apache.org</url>

   <properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<cucumber-jvm.version>1.1.8</cucumber-jvm.version>
		<selenium.version>2.53.1</selenium.version>
		<junit.version>4.11</junit.version>
		<version.poi>3.7</version.poi>
	<!-- 	<cucumber.options>format pretty @ChelmerLogin</cucumber.options>  -->
	</properties>
	<build>
		<plugins>			
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.4.0</version>
				<executions>
					<execution>
						<phase>integration-test</phase>
						<goals>
							<goal>java</goal>
						</goals>
						
					</execution>
				</executions>
				<configuration>
			
					<classpathScope>test</classpathScope>
					<mainClass>cucumber.api.cli.Main</mainClass>
					
					<arguments>
						<argument>--format</argument>
						<argument>junit:output/cucumber-junit-report/allcukes.xml</argument>
						<argument>--format</argument>
						<argument>pretty</argument>
						<argument>--format</argument>
						<argument>html:output/cucumber-html-report</argument>
						<argument>--format</argument>
						<argument>json:output/cucumber_report.json</argument>
						<argument>--tags</argument>
						 <argument>@Logingmail</argument>				
						<argument>--glue</argument>
						<argument>automation</argument>
						<argument>src/test/resources</argument>
					</arguments> 
					<noExit>true</noExit>
				<continueOnFailure>true</continueOnFailure>
					<ignoreExitCode>true</ignoreExitCode> 
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
	<groupId>info.cukes</groupId>
	<artifactId>cucumber-picocontainer</artifactId>
	<version>${cucumber-jvm.version}</version>
</dependency>
